---
layout: html.njk
---

{% include 'header.njk' %}

<main>
  <section class="page-block has-slope-after">
    <div class="container">
      <section class="section is-flat">
        <h1 class="title is-1 has-text-white">{{ title }}</h1>
        <p class="subtitle is-4 has-text-white">{{ subtitle }}</p>
      </section>
    </div>
  </section>
  
  <section class="section">
    <div class="container">
      <p class="buttons is-size-4">
        <a class="button is-text" href="{{ '/' | url }}">
          ‚Üê Home
        </a>
      </p>
      <div class="projectGrid">
        {% for project in collections.projects | newestFirst %}
        {% include 'project-card.njk' %}
        {% endfor %}
      </div>
    </div>
  </section>
</main>

{% include 'footer.njk' %}
