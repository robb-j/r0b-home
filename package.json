{
  "name": "@robb_j/r0b-home",
  "description": "Rob Anderson's homepage",
  "version": "0.0.0",
  "private": true,
  "repository": "robb-j/r0b-home",
  "author": "",
  "license": "MIT",
  "scripts": {
    "coverage": "jest --coverage",
    "dev": "NODE_ENV=development nodemon -w src -x 'node -r dotenv/config' src/index.js",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s",
    "start": "node -r dotenv/config src/index.js",
    "test": "jest",
    "deploy": "eleventy && rsync -azv --delete dist/* root@r0b.io:/srv/static/home"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@robb_j/r0b-design": "^0.2.4",
    "dotenv": "^7.0.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/index.js"
}
