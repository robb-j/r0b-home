{
  "name": "@robb_j/r0b-home",
  "private": true,
  "repository": "robb-j/r0b-home",
  "scripts": {
    "lint": "eslint src",
    "serve": "eleventy --serve",
    "format": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "build": "eleventy"
  },
  "dependencies": {
    "@robb_j/r0b-design": "^0.2.7"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "esbuild": "^0.14.49",
    "husky": "^7.0.4",
    "lint-staged": "^13.0.3",
    "prettier": "^2.4.1",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
