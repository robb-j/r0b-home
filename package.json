{
  "name": "@robb_j/r0b-home",
  "description": "Rob Anderson's homepage",
  "version": "0.0.0",
  "private": true,
  "repository": "robb-j/r0b-home",
  "author": "",
  "license": "MIT",
  "scripts": {
    "coverage": "jest --coverage",
    "serve": "eleventy --serve",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s",
    "start": "node -r dotenv/config src/index.js",
    "test": "jest",
    "deploy": "eleventy && rsync -azv --delete dist/* root@r0b.io:/srv/static/home"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@robb_j/r0b-design": "^0.2.7",
    "dotenv": "^8.2.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "http-server": "^0.12.1",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/index.js"
}
